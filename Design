<body>
    <div class="cassette-container">
        <div class="cassette-body">
            <div class="label-area"></div>
            <div class="tape-stripe">
                <div class="stripe-line"></div>
                <div class="stripe-line"></div>
            </div>
            <div class="reels-container">
                <div class="reel">
                    <div class="reel-inner">
                        <div class="reel-spokes" id="leftReel">
                            <div class="spoke"></div>
                            <div class="spoke"></div>
                            <div class="spoke"></div>
                            <div class="spoke"></div>
                        </div>
                        <div class="reel-center"></div>
                    </div>
                </div>
                <div class="reel">
                    <div class="reel-inner">
                        <div class="reel-spokes" id="rightReel">
                            <div class="spoke"></div>
                            <div class="spoke"></div>
                            <div class="spoke"></div>
                            <div class="spoke"></div>
                        </div>
                        <div class="reel-center"></div>
                    </div>
                </div>
            </div>
            <div class="time-label">90 min</div>
        </div>

        <div class="controls-area">
            <div class="track-info" id="trackInfo">My Retro Track</div>
            
            <div class="progress-container" id="progressContainer">
                <div class="progress-bar" id="progressBar"></div>
            </div>
            
            <div class="time-info">
                <span id="currentTime">0:00</span>
                <span id="duration">0:00</span>
            </div>

            <div class="buttons">
                <button id="prevBtn">‚èÆ</button>
                <button id="playBtn">‚ñ∂</button>
                <button id="nextBtn">‚è≠</button>
            </div>

            <div class="volume-control">
                <span class="volume-icon">üîä</span>
                <input type="range" min="0" max="100" value="70" class="volume-slider" id="volumeSlider">
            </div>
        </div>

        <audio id="audio" src=""></audio>
    </div>

    <script>
        const audio = document.getElementById('audio');
        const playBtn = document.getElementById('playBtn');
        const prevBtn = document.getElementById('prevBtn');
        const nextBtn = document.getElementById('nextBtn');
        const progressBar = document.getElementById('progressBar');
        const progressContainer = document.getElementById('progressContainer');
        const currentTimeEl = document.getElementById('currentTime');
        const durationEl = document.getElementById('duration');
        const volumeSlider = document.getElementById('volumeSlider');
        const leftReel = document.getElementById('leftReel');
        const rightReel = document.getElementById('rightReel');
        const trackInfo = document.getElementById('trackInfo');

        // ÏùåÏïÖ ÌååÏùº URLÏùÑ Ïó¨Í∏∞Ïóê Ï∂îÍ∞ÄÌïòÏÑ∏Ïöî
        const playlist = [
            { title: 'Retro Vibes', src: 'https://www.soundhelix.com/examples/mp3/SoundHelix-Song-1.mp3' },
            { title: 'Summer Breeze', src: 'https://www.soundhelix.com/examples/mp3/SoundHelix-Song-2.mp3' },
            { title: 'Night Drive', src: 'https://www.soundhelix.com/examples/mp3/SoundHelix-Song-3.mp3' }
        ];

        let currentTrack = 0;
        let isPlaying = false;

        // Ï¥àÍ∏∞ Ìä∏Îûô Î°úÎìú
        loadTrack(currentTrack);

        function loadTrack(index) {
            audio.src = playlist[index].src;
            trackInfo.textContent = playlist[index].title;
            audio.load();
        }

        // Ïû¨ÏÉù/ÏùºÏãúÏ†ïÏßÄ
        playBtn.addEventListener('click', () => {
            if (isPlaying) {
                audio.pause();
                playBtn.textContent = '‚ñ∂';
                leftReel.classList.remove('playing');
                rightReel.classList.remove('playing');
            } else {
                audio.play();
                playBtn.textContent = '‚è∏';
                leftReel.classList.add('playing');
                rightReel.classList.add('playing');
            }
            isPlaying = !isPlaying;
        });

        // Ïù¥Ï†Ñ Ìä∏Îûô
        prevBtn.addEventListener('click', () => {
            currentTrack = (currentTrack - 1 + playlist.length) % playlist.length;
            loadTrack(currentTrack);
            if (isPlaying) {
                audio.play();
            }
        });

        // Îã§Ïùå Ìä∏Îûô
        nextBtn.addEventListener('click', () => {
            currentTrack = (currentTrack + 1) % playlist.length;
            loadTrack(currentTrack);
            if (isPlaying) {
                audio.play();
            }
        });

        // ÏßÑÌñâ Î∞î ÏóÖÎç∞Ïù¥Ìä∏
        audio.addEventListener('timeupdate', () => {
            const progress = (audio.currentTime / audio.duration) * 100;
            progressBar.style.width = progress + '%';
            currentTimeEl.textContent = formatTime(audio.currentTime);
        });

        // Í≥° Í∏∏Ïù¥ Î°úÎìú
        audio.addEventListener('loadedmetadata', () => {
            durationEl.textContent = formatTime(audio.duration);
        });

        // ÏßÑÌñâ Î∞î ÌÅ¥Î¶≠
        progressContainer.addEventListener('click', (e) => {
            const width = progressContainer.clientWidth;
            const clickX = e.offsetX;
            const duration = audio.duration;
            audio.currentTime = (clickX / width) * duration;
        });

        // Î≥ºÎ•® Ï°∞Ï†à
        volumeSlider.addEventListener('input', (e) => {
            audio.volume = e.target.value / 100;
        });

        // Ï¥àÍ∏∞ Î≥ºÎ•® ÏÑ§Ï†ï
        audio.volume = 0.7;

        // Í≥° ÎÅùÎÇòÎ©¥ Îã§Ïùå Í≥° Ïû¨ÏÉù
        audio.addEventListener('ended', () => {
            currentTrack = (currentTrack + 1) % playlist.length;
            loadTrack(currentTrack);
            audio.play();
        });

        // ÏãúÍ∞Ñ Ìè¨Îß∑ Ìï®Ïàò
        function formatTime(seconds) {
            if (isNaN(seconds)) return '0:00';
            const mins = Math.floor(seconds / 60);
            const secs = Math.floor(seconds % 60);
            return `${mins}:${secs < 10 ? '0' : ''}${secs}`;
        }
    </script>
</body>
</html>
